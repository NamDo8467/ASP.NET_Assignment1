<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CustomerStyleSheet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>
    <header class="w-100 d-flex justify-content-center p-3 mb-3">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">SportsPro</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 d-flex">
                        <li class="nav-item mx-2">
                            <a class="nav-link @TempData["Home"]" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link @TempData["Product"]" asp-area="" asp-controller="Product" asp-action="List">Products</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link @TempData["Technician"]" asp-area="" asp-controller="Technician" asp-action="List">Technicians</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link @TempData["Customer"]" asp-area="" asp-controller="Customer" asp-action="List">Customers</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link @TempData["Incident"]" asp-area="" asp-controller="Incident" asp-action="List">Incidents</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link @TempData["Registration"]" asp-area="" asp-controller="Registration" asp-action="List">Registration</a>
                            @*<a class="nav-link text-white">Registrations</a>*@

                        </li>

                        <li class="nav-item mx-2">
                            @*<a class="nav-link text-white" asp-area="" asp-controller="About" asp-action="Index">About</a>*@
                            <a class="nav-link @TempData["About"]">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - GBCSports - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/OperationMessage.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
