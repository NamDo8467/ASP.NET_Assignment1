@model IEnumerable<Product>
@{
    ViewBag.Title = "Product Manager";
}
<header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 bg-primary">
            <div class="container-fluid bg-primary">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">SportsPro</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 d-flex">
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white" asp-area="" asp-controller="Products" asp-action="List">Products</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white" asp-area="" asp-controller="Technicians" asp-action="Index">Technicians</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white" asp-area="" asp-controller="Customers" asp-action="Index">Customers</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white" asp-area="" asp-controller="Incidents" asp-action="Index">Incidents</a>
                        </li>
                        <li class="nav-item mx-2">
                            @*<a class="nav-link text-white" asp-area="" asp-controller="Registrations" asp-action="Index">Registration</a>*@
                            <a class="nav-link text-white">Registrations</a>

                        </li>

                        <li class="nav-item mx-2 mx-auto col-sm-1 col-md-5 d-flex justify-content-end">
                            @*<a class="nav-link text-white" asp-area="" asp-controller="About" asp-action="Index">About</a>*@
                            <a class="nav-link text-white">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <div class="pt-3"><h2>Product Manager</h2></div>
    </div>

    <table>
        <thead>
            <tr>Code</tr>
            <tr>Name</tr>
            <tr>Price</tr>
            <tr>Release Date</tr>
            <tr></tr>
            <tr></tr>
        </thead>
        <tbody>
            @foreach (Product good in Model)
            {
                <tr>@good.Code</tr>
                <tr>@good.Name</tr>
                <tr>@good.Price</tr>
                <tr>@good.Release_Date</tr>
                <tr><button asp-controller="Product" asp-action="Edit" name="Edit">Edit</button></tr>
                <tr><button asp-controller="Product" asp-action="Delete" name="Delete" >Delete</button></tr>

            }
        </tbody>
    </table>
    <a asp-controller="Product" asp-action="Add" name="Add Product">Add Product</a>
