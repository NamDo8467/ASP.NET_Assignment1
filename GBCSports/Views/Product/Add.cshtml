@model GBCSports.Models.Product;

@{
    ViewBag.Title = "Add Product";
}

<div class="container">
    <div><h2 class="pt-3">Add Product</h2></div>
</div>
<form method="post" asp-action="Add" asp-controller="Product">
    <div class="form-group">
        <label asp-for="Code">Code</label>
        <span asp-validation-for="Code"></span>
        <input class="form-control" type="text" id="codeInput" asp-for="Code">
        
        <br>
    </div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <span asp-validation-for="Name"></span>
        <input class="form-control" type="text" id="nameInput" asp-for="Name">
        
        <br>
    </div>
    <div class="form-group">
        <label asp-for="Price">Yearly Price</label>
        <span asp-validation-for="Price"></span>
        <input class="form-control" type="text" id="priceInput" placeholder="0.00" asp-for="Price"> 
       
        <br>
    </div>
    <div class="form-group">
        <label asp-for="Release_Date">Release Date</label>
        <span asp-validation-for="Release_Date"></span>
        <input class="form-control" type="text" id="dateInput" placeholder="MM/DD/YYYY" asp-for="Release_Date">
        
        <br>
    </div>
    <br>
    <button class="btn btn-primary" type="submit" asp-controller="Product" asp-action="Add">Save</button>
    <button class="btn btn-primary" type="submit" asp-controller="Product" asp-action="Index">Cancel</button>
</form>