@{
	ViewData["Title"] = "Edit Incident";
}
@model Incident
<br/>
<br/>
<br/>
<br/>
<br/>

<div class="container">
	<div class="pt-3">
        <h2>Edit Incident</h2>
    </div>
	
	<div class="mb-3 row">
		<label for="staticEmail" class="col-sm-2 col-form-label">Technician</label>
		<div class="col-sm-10">
		  <input type="text" readonly class="form-control-plaintext" value="@Model.Technician">
		</div>
	</div>

	<div class="mb-3 row">
		<label for="inputPassword" class="col-sm-2 col-form-label">Customer</label>
		<div class="col-sm-10">
			<input type="text" readonly class="form-control-plaintext" value="@Model.CustomerName">
		</div>
	</div>

	<div class="mb-3 row">
		<label for="inputPassword" class="col-sm-2 col-form-label">Product</label>
		<div class="col-sm-10">
			<input type="text" readonly class="form-control-plaintext" value="@Model.Product">
		</div>
	</div>

	<div class="mb-3 row">
		<label for="inputPassword" class="col-sm-2 col-form-label">Title</label>
		<div class="col-sm-10">
			<input type="text" readonly class="form-control-plaintext" value="@Model.Title">
		</div>
	</div>

	<div class="mb-3 row">
		<label for="inputPassword" class="col-sm-2 col-form-label">Date Opened</label>
		<div class="col-sm-10">
			<input type="text" readonly class="form-control-plaintext" value="@Model.DateOpened">
		</div>
	</div>

	<form asp-controller="Technician" asp-action="EditIncidentPost" method="post">
		<div class="mb-3">
			<label class="form-label">Description</label>
			<textarea class="form-control" rows="3" value="@Model.Description" asp-for=@Model.Description></textarea>
		</div>

		<div class="mb-3">
			<label class="form-label">Date Closed</label>
			<br/>
			<input type="datetime-local" class="form-control" value="@Model.DateClosed" asp-for="@Model.DateClosed">
		</div>

		<input type="hidden" value="@Model.Id" asp-for="@Model.Id"/>
		<button type="submit" class="btn btn-primary">Save</button>
		<a asp-controller="Technician" asp-action="GetIncidentList" asp-route-id="@Context.Session.GetInt32("id")" class="btn btn-danger">Cancel</a>
	</form>
	 
</div>